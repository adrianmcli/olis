@import '/client/modules/core/components/application'

#notes-container
  width 100%
  height 100%
  
  .notes-header
    height 64px
    border-bottom 1px solid rgba(0,0,0,0.08)
    box-sizing content-box
    display flex
    justify-content space-between
  
    .notes-status
      color rgba(0,0,0,0.5)
      font-size 13px
      font-weight 300
      font-style italic
      padding 24px 12px
      flex-grow 1
      white-space nowrap
      text-overflow ellipsis
      overflow hidden

    .notes-icon-bar
      display flex
      display -webkit-flex
      padding 8px
  
  .notes-data-wrapper
    padding 12px 36px
    height calc(100% - 64px)
    overflow scroll
    & *
      font-family Cardo, Georgia, Serif
      outline-color white