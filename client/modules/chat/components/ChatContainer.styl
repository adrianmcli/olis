header-height = 64px
side-padding = 36px
bg-color = #EFEFEF

#chat-container
  width 100%
  height 100%
  display flex
  display -webkit-flex
  flex-direction column
  background-repeat repeat
  background-image url('http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/diamond_upholstery.png')
  
  #chat-header
    height 64px
    width 100%
    flex-grow 0
    flex-shrink 0
    display flex
    display -webkit-flex
    z-index 1
    background bg-color
    border-bottom 1px solid rgba(0,0,0,0.08)
    box-sizing content-box
    
    .header-body
      flex-grow 1
      padding-left 12px
      transition background 0.15s
      
      &:hover
        background bg-color - 20%
        color white
        cursor pointer
        
        .chat-meta
          color white

      .chat-title
        margin-top 12px
        line-height 26px
        font-size 18px
        font-weight 700
      
      .chat-meta
        line-height 14px
        font-size 12px
        color bg-color - 50%
    
    .header-icon
      padding 8px
      color bg-color - 50%
    
  #chat-msg-area
    flex-grow 1
    overflow scroll
    padding 24px side-padding 0
    
  #load-more-btn
    font-size 14px
    padding 6px
    margin-bottom 24px
    border-radius 6px
    color white
    background #aaa
    cursor pointer
    text-align center
    
  #chat-input
    min-height 64px
    flex-shrink 0
    z-index 1
    background bg-color
    border-top 1px solid rgba(0,0,0,0.08)
    display flex
    display -webkit-flex
    align-items center
    justify-content center
    font-weight 300
    
    .chat-input-container
      width 100%
      height 100%
      display flex
      display -webkit-flex
      align-items center
      justify-content center
      background white
      margin 18px
      border-radius 3px
    
    .chat-input-icons
      color rgba(0,0,0,0.5)
      margin-right 12px
      margin-left 6px
      
      i
        display inline
        margin-right 6px
        
        &:last-child
          margin-right 0