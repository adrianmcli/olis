@import '/client/modules/core/components/application'

header-height = 64px
side-padding = 36px

#chat-container
  width 100%
  height 100%
  display flex
  display -webkit-flex
  flex-direction column
  background-repeat repeat
  background-image url('http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/diamond_upholstery.png')
  // background blue
  
  #chat-header
    height 64px
    width 100%
    flex-grow 0
    flex-shrink 0
    padding-left 12px
    display flex
    display -webkit-flex
    z-index 1
    background grey
    border-bottom 1px solid rgba(0,0,0,0.08)
    // box-shadow 0 2px 6px rgba(0,0,0,0.12), 0 2px 4px rgba(0,0,0,0.12)
    // background red
    
    .header-body
      flex-grow 1

      .chat-title
        margin-top 12px
        line-height 26px
        font-size 18px
        font-weight 700
      
      .chat-meta
        // margin-top 4px
        line-height 14px
        font-size 12px
        color grey - 50%
    
    .header-icon
      padding 8px
      color grey - 50%
    
  #chat-msg-area
    flex-grow 1
    overflow scroll
    padding 24px side-padding 0
    
  #chat-input
    min-height 64px
    flex-shrink 0
    z-index 1
    background grey
    border-top 1px solid rgba(0,0,0,0.08)
    display flex
    display -webkit-flex
    align-items center
    justify-content center
    
    .chat-input-container
      width 100%
      height 100%
      display flex
      display -webkit-flex
      align-items center
      justify-content center
      background white
      margin 18px
      border-radius 3px
    
    .chat-input-icons
      color rgba(0,0,0,0.5)
      margin-right 12px
      margin-left 6px
      
      i
        display inline
        margin-right 6px
        
        &:last-child
          margin-right 0