@import '/client/modules/core/components/application'

chat-bg-color = #EFEFEF
divider-color = primary-dark
active-bg-color = primary + 50%

.conversation-item
  width 100%
  height 72px
  background primary
  display flex
  display -webkit-flex
  position relative
  cursor pointer
  transition all 0.3s
  
  &:hover
    background primary-dark
  
  &.active
    background active-bg-color
    
    &:after
      content ''
      position absolute
      transform translate(0,-50%)
      top 50%
      right 0
      left auto
      width 0
      height 0
      border-style solid
      border-width 8px 10px 8px 0
      border-color transparent chat-bg-color transparent transparent
      background transparent
      z-index 2
    
  &.unread .chat-title
    font-weight 400
  
  &:after
    content ''
    position absolute
    width 80%
    height 1px
    bottom 0
    left 10%
    background divider-color
  
  .chat-avatar
    padding 12px
    
  .chat-body
    padding-top 12px
    padding-right 12px
    flex-grow 1
    max-width calc(100% - 77px)
  
  .chat-main
    display flex
    display -webkit-flex
    align-items baseline
    
  .chat-title
    flex-grow 1
    font-size 16px
    font-weight 300
    line-height 21px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  
  .chat-time
    text-align right
    font-size 12px
    font-weight 300
    white-space nowrap
    margin-left 12px
    flex-shrink 0
    color rgba(255,255,255,0.7)
  
  .chat-secondary
    font-size 12px
    line-height 19px
    margin-top 3px
    font-weight 300
    display flex
    display -webkit-flex
    
    .chat-status
      color rgba(255,255,255,0.7)
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      flex-grow 1
    
    .chat-star-icon
      min-width 24px
      transform scale(0.8) translateY(-4px)
    
    .chat-badge
      min-width 36px