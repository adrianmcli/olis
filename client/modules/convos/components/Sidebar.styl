@import '/client/modules/core/components/application'

header-height = 64px

#sidebar-container
  width 100%
  height 100%

#sidebar-header
  height header-height
  width 100%
  padding-right 12px
  position relative
  color white
  box-shadow 0 2px 6px rgba(0,0,0,0.12), 0 2px 4px rgba(0,0,0,0.12)
  display flex
  display -webkit-flex
  align-items center
  user-select none
  -webkit-user-select none
  z-index 2
  
  .team-name
    line-height header-height
    font-size 18px
    padding-left 12px
    padding-right 12px
    transition all 0.1s
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    cursor pointer
    flex-grow 1
    &:hover
      background-color primary-dark
  
  .header-icon
    flex-grow 0
    &:last-child
      margin-right 12px

.header-menu
  position relative
  
  .menu-name
    font-size 18px
    line-height 24px

  .menu-my-account
    font-size 12px
    line-height 16px

#conversation-list
  height "calc(100% - %s)" % header-height
  width 100%
  overflow scroll
  color white
  user-select none
  -webkit-user-select none