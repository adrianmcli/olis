@import "application"

teams-col-bg = primary-dark
convo-col-bg = primary
chat-bg = chat-bg

#main-page
  width 100%
  height 100%  
  display flex
  display -webkit-flex

#teams-column
  width 80px
  height 100%
  background teams-col-bg
  flex-grow 0
  flex-shrink 0

#sidebar
  min-width 240px
  max-width 360px
  height 100%
  background convo-col-bg
  flex-grow 1
  box-shadow -3px 0 6px rgba(0,0,0,0.16), -3px 0 6px rgba(0,0,0,0.23)
  
#chat-column
  background chat-bg
  min-width 360px
  height 100%
  flex-grow 1
  box-shadow -3px 0 6px rgba(0,0,0,0.19), -3px 0 6px rgba(0,0,0,0.23)
  z-index 1

#notes-column
  min-width 360px
  height 100%
  flex-grow 1