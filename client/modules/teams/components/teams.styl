@import '/client/modules/core/components/application'

active-pointer-color = white
border-radius = 5px
container-padding = 12px
accent-color = red

#team-list-wrapper
  height 100%

#team-list
  height calc(100% - 65px)
  padding container-padding
  position relative
  user-select none
  -webkit-user-select none
  z-index 3
  
.team-item
  color primary-dark
  background grey
  margin 0 0 10px
  height 80px - container-padding * 2
  width 80px - container-padding * 2
  position relative
  border-radius border-radius
  opacity 0.3
  cursor pointer
  transition all 0.2s
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
  
  &:hover
    opacity 1
    box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
  
  &.active
    opacity 1
    
    // the triangle pointer
    &:after
      content ''
      width 0
      height 0
      position absolute
      top 50%
      left -14px
      transform translateY(-50%)
      border-left 10px solid active-pointer-color
      border-top 5px solid transparent
      border-bottom 5px solid transparent
  
  &.no-box
    background transparent
    color white
    box-shadow none

  &.add-team, &.manage-teams
    display flex
    display -webkit-flex
    align-items center
    justify-content center
    
  &.manage-teams
    position absolute
    bottom container-padding
    left container-padding
    margin 0
    z-index 9999
    
  img
    width 90%
    border-radius border-radius
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)