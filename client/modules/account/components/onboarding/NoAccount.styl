indigo = #2F3F70
pink = #ff4081
teal = #00bcd4

.no-account-page
  background-color indigo
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center

.no-account-container
  max-width 1140px
  height 100%
  display flex
  justify-content space-around
  align-items center
  
  .title
    font-weight 700
    font-size 36px
    margin-bottom 18px
  
  .desc
    font-weight 300
    font-size 18px
    width 80%

.register-new-team, .find-my-team
  text-align center
  width 40%
  height 80%
  color white
  text-decoration none
  transition all 0.1s
  display flex
  flex-direction column
  justify-content center
  align-items center
  
  &:hover
    background-color rgba(255,255,255,0.025)
    transform scale(1.02)
    box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)

.register-new-team
  border 1px solid pink

.find-my-team
  border 1px solid teal